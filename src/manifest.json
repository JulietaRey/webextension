{
  "manifest_version": 2,
  "name": "My Extension",
  "author": "JulietaRey",
  "version": "0",
  
  "description": "",

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "content_scripts/main.js"
    ],
    "css": []
  }],
  
  "browser_actions": {
    "default_icon": {
      "64": ""
    },
    "default_title": "Title"
  },

  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background_scripts/main.js"
    ]
  },

  "permissions": [
    "*",
    "tabs",
    "storage"
  ]
}